@using eOdsustva.SoftverskoInzenjerstvo.Common
@model IEnumerable<eOdsustva.SoftverskoInzenjerstvo.Data.LeaveAllocation>

@{
    ViewData["Title"] = "Leave Allocations";
}

<h2>Dodela Odsustva</h2>

@if (User.IsInRole(Roles.Administrator))
{
    <a asp-action="Create" class="btn btn-primary">Create New</a>
}

<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Leave Type</th>
            <th>Employee</th>
            <th>Period</th>
            <th class="text-center">Days</th>
            <th class="text-center">Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @item.LeaveType?.Name
                </td>
                <td>
                    @item.Employee?.Email
                </td>
                <td>
                    @item.Period?.Name
                </td>
                <td class="text-center">
                    @item.Days
                </td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-info">Detalji</a>

                    @if (User.IsInRole(Roles.Administrator))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-warning">Izmeni</a>

                        <a asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-danger">Obriši</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
