@using eOdsustva.SoftverskoInzenjerstvo.Common
@using eOdsustva.SoftverskoInzenjerstvo.Models.LeaveAllocation
@model List<LeaveAllocationListVM>

@{
    ViewData["Title"] = "Dodela Odsustva";
}

<h2>Dodela Odsustva</h2>
<p>
@if (User.IsInRole(Roles.Supervisor))
{
    <a asp-action="Create" class="btn btn-primary">Kreiraj Nov</a>
}
</p>
<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>Tip Odsustva</th>
            <th>Zaposleni</th>
            <th>Odeljenje</th>
            <th>Period</th>
            <th class="text-center">Dana</th>
            <th class="text-center">Akcija</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LeaveTypeName</td>
                <td>@item.EmployeeFullName</td>
                <td>@item.DepartmentName</td>
                <td>@item.PeriodName</td>
                <td class="text-center">@item.Days</td>
                <td class="text-center">
                    <a asp-action="Details" asp-route-id="@item.Id"
                       class="btn btn-info">Detalji</a>

                    @if (User.IsInRole(Roles.Supervisor))
                    {
                        <a asp-action="Edit" asp-route-id="@item.Id"
                           class="btn btn-warning">Izmeni</a>

                        <a asp-action="Delete" asp-route-id="@item.Id"
                           class="btn btn-danger">Obriši</a>
                    }
                </td>
            </tr>
        }
    </tbody>
</table>
