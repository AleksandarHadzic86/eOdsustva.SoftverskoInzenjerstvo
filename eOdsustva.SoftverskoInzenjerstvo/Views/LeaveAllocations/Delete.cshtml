@using eOdsustva.SoftverskoInzenjerstvo.Models.LeaveAllocation
@model LeaveAllocationDeleteVM

@{
    ViewData["Title"] = "Obriši";
}

<h1>Obriši Vrstu Odsustva</h1>

<h3>Da li ste sigurni da želite da obrišete ovo?</h3>
<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-3">Tip odsustva</dt>
        <dd class="col-sm-9">@Model.LeaveTypeName</dd>

        <dt class="col-sm-3">Zaposleni</dt>
        <dd class="col-sm-9">@Model.EmployeeFullName</dd>

        <dt class="col-sm-3">Odeljenje</dt>
        <dd class="col-sm-9">@Model.DepartmentName</dd>

        <dt class="col-sm-3">Period</dt>
        <dd class="col-sm-9">@Model.PeriodName</dd>

        <dt class="col-sm-3">Broj dana</dt>
        <dd class="col-sm-9">@Model.Days</dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="Id" />
        <input type="submit" value="Obriši" class="btn btn-danger" />
        <a asp-action="Index" class="btn btn-primary">Nazad na Listu</a>
    </form>
</div>
