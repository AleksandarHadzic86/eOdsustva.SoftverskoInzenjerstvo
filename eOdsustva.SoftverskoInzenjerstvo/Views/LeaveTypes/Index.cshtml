@using eOdsustva.SoftverskoInzenjerstvo.Models.LeaveTypes
@model IEnumerable<LeaveTypeReadOnlyVM>

@{
    ViewData["Title"] = "Početna";
}

<h1>Početna</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Kreiraj Nov</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.NumberOfDays)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.NumberOfDays)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Izmeni</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalji</a> |
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger">Obriši</a>
            </td>
        </tr>
}
    </tbody>
</table>
