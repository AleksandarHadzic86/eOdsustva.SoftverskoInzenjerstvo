@using eOdsustva.SoftverskoInzenjerstvo.Models.Periods
@model IEnumerable<PeriodVM>

@{
    ViewData["Title"] = "Periodi";
}

<h2>Periodi</h2>

<p>
    <a asp-action="Create" class="btn btn-primary">Kreiraj nov</a>
</p>
<table class="table table-striped table-bordered align-middle">
    <thead class="table-light">
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.StartDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EndDate)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EndDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning">Izmeni</a> |
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info">Detalji</a> |
            </td>
        </tr>
}
    </tbody>
</table>
